{
  "name": "zweimach.org",
  "private": true,
  "description": "Personal website and blog of Ananda Umamil",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "email": "zweimach@zweimach.org",
    "name": "Ananda Umamil"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zweimach/zweimach.org"
  },
  "scripts": {
    "start": "run-s build:dev",
    "build": "run-s clean build:prod",
    "build:dev": "eleventy --serve",
    "build:prod": "eleventy",
    "clean": "trash build"
  },
  "dependencies": {
    "@11ty/eleventy": "0.11.0",
    "@11ty/eleventy-navigation": "0.1.5",
    "@11ty/eleventy-plugin-rss": "1.0.7",
    "clean-css": "4.2.3",
    "html-minifier": "4.0.0",
    "markdown-it": "11.0.0",
    "npm-run-all": "4.1.5",
    "sass": "1.26.7",
    "trash-cli": "3.0.0"
  },
  "devDependencies": {
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "lint-staged": "10.2.10",
    "prettier": "2.0.5"
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": {
    "htmlWhitespaceSensitivity": "strict"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2015,
      "sourceType": "script"
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": "src/assets/scripts/**/*.js",
        "env": {
          "node": false,
          "browser": true
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,yml,yaml,html,css,scss}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
