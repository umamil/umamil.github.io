{
  "name": "zweimach.org",
  "private": true,
  "description": "Personal website and blog of Ananda Umamil",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "email": "zweimach@zweimach.org",
    "name": "Ananda Umamil"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zweimach/zweimach.org"
  },
  "scripts": {
    "start": "run-s build:dev",
    "build": "run-s clean build:prod",
    "build:dev": "eleventy --serve",
    "build:prod": "eleventy",
    "clean": "trash build",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "@11ty/eleventy": "0.12.1",
    "@11ty/eleventy-navigation": "0.2.0",
    "@11ty/eleventy-plugin-rss": "1.1.1",
    "eleventy-google-fonts": "^0.0.5",
    "eleventy-plugin-tailwindcss": "^0.3.0",
    "html-minifier": "4.0.0",
    "markdown-it": "12.0.6",
    "npm-run-all": "4.1.5",
    "trash-cli": "4.0.0"
  },
  "devDependencies": {
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "lint-staged": "11.0.0",
    "prettier": "2.3.1",
    "simple-git-hooks": "^2.4.1"
  },
  "prettier": {},
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2015,
      "sourceType": "script"
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": "src/assets/scripts/**/*.js",
        "env": {
          "node": false,
          "browser": true
        }
      }
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,json,md,yml,yaml,html,css}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
